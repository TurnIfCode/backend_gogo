        "/api/topup": {
            "post": {
                "tags": [
                    "topup"
                ],
                "summary": "Create a new topup transaction",
                "description": "Create a new user topup transaction with wallet_id and coin_amount",
                "operationId": "topup",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "wallet_id",
                                    "coin_amount"
                                ],
                                "properties": {
                                    "wallet_id": {
                                        "type": "string",
                                        "example": "wallet_uuid"
                                    },
                                    "coin_amount": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 100000
                                    },
                                    "price": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 15000
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Topup transaction created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Topup transaction created successfully"
                                        },
                                        "data": {
                                            "properties": {
                                                "id": {
                                                    "type": "string",
                                                    "example": "topup_uuid"
                                                },
                                                "wallet_id": {
                                                    "type": "string",
                                                    "example": "wallet_uuid"
                                                },
                                                "coin_amount": {
                                                    "type": "number",
                                                    "format": "float",
                                                    "example": 100000
                                                },
                                                "price": {
                                                    "type": "number",
                                                    "format": "float",
                                                    "example": 15000
                                                },
                                                "status": {
                                                    "type": "string",
                                                    "example": "Proses"
                                                },
                                                "created_by": {
                                                    "type": "string",
                                                    "example": "userA"
                                                },
                                                "created_at": {
                                                    "type": "string",
                                                    "example": "2025-07-07 15:50:43"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
